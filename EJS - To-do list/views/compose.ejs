<%- include("partials/header") -%>
<h1>Compose</h1>

<form action="/compose" method="post">
<div class="form-group">
    <label>Title</label>                          
    <input type="text" class="form-control" name="postTitle">                         <!--name="postTitle" er attributen vi bruker når vi referer til inputen i app.js-->
    <label>Post</label>
    <textarea class="form-control" cols="30" rows="5" name="postBody"></textarea>
</div>
<button class="btn btn-primary" type="submit" name="button">Publish</button>          <!--Button MÅ være type="submit", submitter til form action="/compose"-->
</form>


